<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dividerColor"
    tools:context="com.example.yan.zhihuapp.QuestionActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/question_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="?attr/colorPrimary">
        <ImageView
            android:id="@+id/back_icon"
            android:src="@drawable/ic_arrow_back_black_24dp"
            android:layout_width="24dp"
            android:layout_height="24dp" />
        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right">

            <ImageView
                android:src="@drawable/ic_share_black_24dp"
                android:layout_width="24dp"
                android:layout_height="24dp" />
        </android.support.v7.widget.LinearLayoutCompat>
    </android.support.v7.widget.Toolbar>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/topic_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"/>
                <TextView
                    android:id="@+id/myQuestion"
                    android:layout_margin="16dp"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/question1"/>
                <TextView
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/questionMessage1"/>
                <RelativeLayout
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_centerVertical="true"
                        android:id="@+id/relative_eye"
                        android:src="@drawable/ic_visibility_black_24dp"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginRight="8dp"/>
                    <TextView
                        android:layout_centerVertical="true"
                        android:id="@+id/eye_text"
                        android:layout_toRightOf="@+id/relative_eye"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="753"
                        android:layout_marginRight="16dp"/>
                    <ImageView
                        android:layout_centerVertical="true"
                        android:id="@+id/comment_img"
                        android:layout_toRightOf="@+id/eye_text"
                        android:src="@drawable/tlak"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_marginRight="8dp"/>
                    <TextView
                        android:id="@+id/comment_text"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/comment_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="18"/>
                    <Button
                        android:layout_alignParentRight="true"
                        android:layout_gravity="right|center_vertical"
                        android:layout_centerVertical="true"
                        android:background="@drawable/question_button"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:text="关注"/>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="1dip">
                <LinearLayout

                    android:background="@drawable/boderlinelayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="12dp"
                    android:gravity="center_horizontal|center_vertical">
                    <ImageView
                        android:src="@drawable/invite"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginRight="4dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:text="邀请回答"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="12dp"
                    android:background="@drawable/boderlinelayout"
                    android:gravity="center_horizontal|center_vertical">
                    <ImageView
                        android:src="@drawable/white"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginRight="4dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:text="写回答"/>
                </LinearLayout>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp">
                <TextView
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/anther_text"
                    android:text="267个回答"/>
                <LinearLayout
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center|center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/anther_text"
                        android:text="按质量排序"/>
                    <ImageView
                        android:src="@drawable/ic_keyboard_arrow_down_black_24dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </RelativeLayout>
            <com.example.yan.zhihuapp.MyListView
                android:id="@+id/question_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@color/dividerColor"
                android:dividerHeight="10dp"/>
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>
