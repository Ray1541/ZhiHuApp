<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionOverflowButtonStyle">@style/MyOverFlowButton</item>
    </style>
    <style name="AppTheme.ActionBar" parent="Base.Theme.AppCompat.Light.DarkActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyOverFlowButton" parent="@android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_more_vert_black_24dp</item>

        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
    </style>

    <style name="MyToggleButton" parent="@android:style/Widget.CompoundButton">
        <item name="android:button">@drawable/checkbox_button1</item>
    </style>
    <style name="MyToggleButton2" parent="@android:style/Widget.CompoundButton">
        <item name="android:button">@drawable/checkbox_button2</item>
    </style>
    <style name="MyToggleButton3" parent="@android:style/Widget.CompoundButton">
        <item name="android:button">@drawable/checkbox_button3</item>
    </style>

    <!--<style name="MyProgressBar" parent="Base.Widget.AppCompat.ProgressBar">-->
        <!--<item name="android:indeterminateTint">#1d8ae7</item>-->
        <!--<item name="android:indeterminateTintMode">src_atop</item>-->
    <!--</style>-->


    <!--日间主题-->
    <style name="DayTheme" parent="AppTheme">
        <item name="myTheme">day</item>
        <!--ActionBar背景  -->
        <item name="colorPrimary">@color/topbar_Background_Day</item>
        <item name="toolbar_Menu_Text_Color">@color/toolbar_Menu_Text_Color_Day</item>
        <item name="toolbar_Text_Color">@color/toolbar_Text_Color_Day</item>
        <!--页面背景-->
        <item name="android:windowBackground">@color/background_Day</item>
        <!--主页item背景色-->
        <item name="main_item_background">@color/main_item_background_Day</item>
        <!--三种文字颜色-->
        <item name="textColorFirst">@color/textColorFirst_Day</item>
        <item name="textColorSecond">@color/textColorSecond_Day</item>
        <item name="textColorThird">@color/textColorThird_Day</item>
        <!--Actionbar-Menu-文字-->
        <item name="main_menu_changetheme">@string/main_menu_changetheme_day</item>
    </style>

    <!--夜晚主题-->
    <style name="NightTheme" parent="AppTheme">
        <item name="myTheme">night</item>
        <!--ActionBar背景  -->
        <item name="colorPrimary">@color/topbar_Background_Night</item>
        <item name="toolbar_Menu_Text_Color">@color/toolbar_Menu_Text_Color_Night</item>
        <item name="toolbar_Text_Color">@color/toolbar_Text_Color_Night</item>
        <!--页面背景-->
        <item name="android:windowBackground">@color/background_Night</item>
        <!--主页item背景色-->
        <item name="main_item_background">@color/main_item_background_Night</item>
        <!--三种文字颜色-->
        <item name="textColorFirst">@color/textColorFirst_Night</item>
        <item name="textColorSecond">@color/textColorSecond_Night</item>
        <item name="textColorThird">@color/textColorThird_Night</item>
        <!--Actionbar-Menu-文字-->
        <item name="main_menu_changetheme">@string/main_menu_changetheme_night</item>
    </style>

</resources>
